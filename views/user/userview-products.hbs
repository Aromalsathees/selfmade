<section>
  <div class="container mt-5 ">
    <div class="row">


{{#each products}}

      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height:24rem">

          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="height: 10rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.Name}}</h5>
            <p class="card-text">{{this.Description}}</p>
            <p class="card-text">{{this.Category}}</p>
            
           {{!-- <a href="/add-tocart/{{this._id}}"  class="btn btn-primary">Add to cart</a> --}}
           <button onclick="addTocart('{{this._id}}')" class="btn btn-primary" >Add to cart</button>
          </div>
        </div>
      </div>
      {{/each}}




    </div>
    </div>
  </div>
</section>


